<form id="site" class="index" action="/users/<%=user.id%>/?_method=PATCH" method="post">
  <label>Username:</label><br>
  <input type="text" name="user[username]" value="<%= user.username %>"><br>
  <label>Password:</label><br>
  <input type="password" name="user[password]" value="<%= user.password %>"><br>
  <label>Name:</label><br>
  <input type="text" name="user[name]" value="<%= user.name %>"><br>
  <label>Cell Number:</label><br>
  <input type="text" name="user[cell]" value="<%= user.cell %>"><br>
  <input type="submit" value="Update!" />
</form>
